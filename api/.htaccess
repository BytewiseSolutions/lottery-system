# API Directory Configuration
RewriteEngine On

# Remove .php extension from API endpoints
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^([^.]+)$ $1.php [NC,L]

# Security: Prevent access to sensitive files
<Files ".env">
    Order allow,deny
    Deny from all
</Files>

<Files "*.log">
    Order allow,deny
    Deny from all
</Files>

# Enable error logging but hide errors from users
php_flag display_errors Off
php_flag log_errors On
php_value error_log /home/u606331557/domains/totalfreelotto.com/logs/php_errors.log

# Set proper content type for API responses
<IfModule mod_headers.c>
    Header set Content-Type "application/json; charset=UTF-8"
</IfModule>

# Increase upload limits for file uploads
php_value upload_max_filesize 10M
php_value post_max_size 10M
php_value max_execution_time 300
php_value max_input_time 300