RewriteEngine On
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# API Routes
RewriteRule ^health$ health.php [L]
RewriteRule ^register$ register.php [L]
RewriteRule ^login$ login.php [L]
RewriteRule ^verify-otp$ verify-otp.php [L]
RewriteRule ^resend-otp$ resend-otp.php [L]
RewriteRule ^draws$ draws.php [L]
RewriteRule ^play$ play.php [L]
RewriteRule ^play-lottery$ play.php [L]
RewriteRule ^results$ results.php [L]
RewriteRule ^entries$ entries.php [L]
RewriteRule ^pool$ pool.php [L]
RewriteRule ^stats$ stats.php [L]

# Handle CORS preflight requests
RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule ^(.*)$ $1 [R=200,L]