RewriteEngine On
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# API Routes
RewriteRule ^api/health$ health.php [L]
RewriteRule ^api/register$ register.php [L]
RewriteRule ^api/login$ login.php [L]
RewriteRule ^api/draws$ draws.php [L]
RewriteRule ^api/play$ play.php [L]
RewriteRule ^api/results$ results.php [L]
RewriteRule ^api/entries$ entries.php [L]
RewriteRule ^api/pool$ pool.php [L]
RewriteRule ^api/stats$ stats.php [L]

# Handle CORS preflight requests
RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule ^(.*)$ $1 [R=200,L]